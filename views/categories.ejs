<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <link rel="stylesheet" href="../public/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/css/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-4 text-center">Categories</h1>
        <div class="row">
            <div class="col-12 bg-light mt-4 border border-dark p-0 fruits">
                <div class="wrapper h-100 w-25">
                    <img class="h-100 w-100 col-img" src="../public/img/fruits.jpg" alt="">
                </div>
                <h2 class="ml-3">Fruits</h2>
            </div>
            <div class="col-12 bg-light border border-dark p-0 vegetables">
                <div class="wrapper h-100 w-25">
                    <img class="h-100 w-100 col-img" src="../public/img/vegetables.jpg" alt="">
                </div>
                <h2 class="ml-3">Vegetables</h2>
            </div>
        </div>
    </div>

    <script>
        let fruitsCategoryElement = document.querySelectorAll('.fruits')
        let vegetablesCategoryElement = document.querySelectorAll('.vegetables')
        fruitsCategoryElement.forEach(element => element.addEventListener('click', () => window.location.href = '/fruits'))
        vegetablesCategoryElement.forEach(element => element.addEventListener('click', () => window.location.href = '/vegetables'))
    </script>
</body>
</html>